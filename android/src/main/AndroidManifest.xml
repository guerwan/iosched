<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.paug.droidcon2015"
    android:versionCode="333"
    android:versionName="3.3.3"
    android:installLocation="auto">
    <!-- versionName and versionCode are specified in build.gradle -->

    <!-- min and target sdk are defined in build.gradle -->
    <!-- uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" / -->

    <permission
        android:name="fr.paug.droidcon2015.permission.WRITE_SCHEDULE"
        android:description="@string/permission_write"
        android:label="@string/permission_write"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.NFC" />
    <!-- required for YouTube -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- required for Calendar API in Android 4.0 or above -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <!-- required for setIsSyncable -->
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <!-- required for GCM -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="fr.paug.droidcon2015.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="fr.paug.droidcon2015.permission.C2D_MESSAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name="fr.paug.droidcon2015.AppApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/actionbar_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.IOSched">

        <!-- Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Activities -->

        <activity
            android:name="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.IOSched.Sessions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Web URLs -->
            <intent-filter android:label="@string/app_name"
                    android:priority="0">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- These catch /io2015 as well as /io2015//// because of pathPattern.
                     Dev testing easily done with adb commands:
                     adb shell am start -a android.intent.action.VIEW -d http://events.google.com/io2015 -->
                <data
                    android:host="@string/website_host_name"
                    android:pathPattern="/io2015/*"
                    android:scheme="http" />
                <data
                    android:host="@string/website_host_name"
                    android:pathPattern="/io2015/*"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.paug.droidcon2015.myschedule.MyScheduleActivity"
            android:label="@string/title_my_schedule"
            android:parentActivityName="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.IOSched.MySchedule"
            android:exported="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.explore.ExploreIOActivity" />
            <!-- Web URLs -->
            <intent-filter android:label="@string/app_name"
                    android:priority="200">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- This catches /io2015/schedule//// but not /io2015/schedule
                     Note: Query parameters are not part of the path and when ?sid=UUID is appended
                           to this path it indicates a session on the website and there is therefore
                           code in MySchedule.onCreate that invokes SessionDetailActivity if the sid
                           is present.
                     See above for testing notes. -->
                <data
                        android:host="@string/website_host_name"
                        android:pathPattern="/io2015/schedule/*"
                        android:scheme="http" />
                <data
                        android:host="@string/website_host_name"
                        android:pathPattern="/io2015/schedule/*"
                        android:scheme="https" />

                <!-- This catches /io2015/schedule but not /io2015/schedule//////
                     See above for testing notes. -->
                <data
                        android:host="@string/website_host_name"
                        android:path="/io2015/schedule"
                        android:scheme="http" />
                <data
                        android:host="@string/website_host_name"
                        android:path="/io2015/schedule"
                        android:scheme="https" />

                <!-- Replicating the above data elements for www.google.com -->
                <!-- This catches /events/io/schedule//// but not /events/io/schedule
                     See above for tes ting notes. -->
                <data
                        android:host="www.google.com"
                        android:pathPattern="/events/io/schedule/*"
                        android:scheme="http" />
                <data
                        android:host="www.google.com"
                        android:pathPattern="/io2015/schedule/*"
                        android:scheme="https" />

                <!-- This catches /events/io/schedule but not /events/io/schedule//////
                     See above for testing notes. -->
                <data
                        android:host="www.google.com"
                        android:path="/events/io/schedule"
                        android:scheme="http" />
                <data
                        android:host="www.google.com"
                        android:path="/events/io/schedule"
                        android:scheme="https" />
            </intent-filter>
        </activity>
 
        <activity
            android:name="fr.paug.droidcon2015.explore.ExploreSessionsActivity"
            android:label="Explore"
            android:theme="@style/Theme.IOSched.WithNavDrawer"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.dir/vnd.droidconparis2015.session" />
            </intent-filter>
        </activity>

        <activity
            android:name="fr.paug.droidcon2015.settings.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:theme="@style/Theme.IOSched.WithNavDrawer"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.explore.ExploreIOActivity" />
        </activity>

        <activity
            android:name="fr.paug.droidcon2015.ui.SearchActivity"
            android:label="@string/title_search"
            android:theme="@style/Theme.IOSched.Search"
            android:launchMode="singleTop"
            android:exported="false">
            <!-- This Activity handles the search intent -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <!-- Intent filter does not need a category = default, since the system delivers
                     the ACTION_SEARCH intent explicitly to the searcheable activity,
                     using component name.
                  -->
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="fr.paug.droidcon2015.feedback.SessionFeedbackActivity"
            android:label="@string/title_session_feedback"
            android:theme="@style/Theme.IOSched.Feedback"
            android:parentActivityName="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.explore.ExploreIOActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.droidconparis2015.session_feedback" />
            </intent-filter>
        </activity>

        <activity
            android:name="fr.paug.droidcon2015.welcome.WelcomeActivity"
            android:theme="@style/Theme.IOSched.Welcome"
            android:exported="false" />

        <activity
            android:name="fr.paug.droidcon2015.videolibrary.VideoLibraryActivity"
            android:theme="@style/Theme.IOSched.VideoLibrary"
            android:label="@string/title_video_library"
            android:parentActivityName="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.explore.ExploreIOActivity" />
        </activity>

        <activity
            android:name="fr.paug.droidcon2015.videolibrary.VideoLibraryFilteredActivity"
            android:theme="@style/Theme.IOSched.VideoLibrary"
            android:label="@string/title_video_library"
            android:parentActivityName="fr.paug.droidcon2015.videolibrary.VideoLibraryActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.videolibrary.VideoLibraryActivity" />
        </activity>

        <activity
            android:name="fr.paug.droidcon2015.session.SessionDetailActivity"
            android:label="@string/title_session_detail"
            android:theme="@style/Theme.IOSched.SessionDetails"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.droidconparis2015.session" />
            </intent-filter>
            <!-- Android Beam for session details -->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.droidconparis2015.session" />
            </intent-filter>
            <!-- Web URLs -->
            <!-- URLs are indexed in search engines in the form:
                 https://events.google.com/io2015/schedule?sid=<session_id>
                 so direct session links are captured in MySchedule. -->
        </activity>

        <activity
            android:name="fr.paug.droidcon2015.social.SocialActivity"
            android:label="@string/title_activity_new_social"
            android:parentActivityName="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:theme="@style/Theme.IOSched.WithNavDrawer"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.explore.ExploreIOActivity" />
        </activity>

        <activity
            android:name="fr.paug.droidcon2015.about.AboutActivity"
            android:label="@string/description_about"
            android:parentActivityName="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:theme="@style/Theme.IOSched.WithNavDrawer"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.explore.ExploreIOActivity" />
        </activity>

        <!-- TaskStackBuilder proxy activity for widgets and notifications. -->

        <activity
            android:name="fr.paug.droidcon2015.ui.TaskStackBuilderProxyActivity"
            android:theme="@android:style/Theme.NoDisplay"
            android:exported="false" />
        <activity
            android:name="fr.paug.droidcon2015.debug.DebugActivity"
            android:label="@string/title_activity_debug_test_runner"
            android:parentActivityName="fr.paug.droidcon2015.explore.ExploreIOActivity"
            android:theme="@style/Theme.IOSched"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.paug.droidcon2015.explore.ExploreIOActivity" />
        </activity>
        <activity
            android:name="fr.paug.droidcon2015.debug.actions.ViewFilesInAppFolderActivity"
            android:label="list files in appdata folder"
            android:parentActivityName="fr.paug.droidcon2015.debug.DebugActivity"
            android:exported="false"></activity>

        <!-- Session alarm/calendar integrating components. -->
        <receiver android:name="fr.paug.droidcon2015.receiver.SessionAlarmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="fr.paug.droidcon2015.action.UPDATE_CALENDAR_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="fr.paug.droidcon2015.service.SessionAlarmService"
            android:exported="false"/>
        <service
            android:name="fr.paug.droidcon2015.service.SessionCalendarService"
            android:exported="false"/>

        <!-- BEGIN Google Analytics install referral measurement -->
        <!-- The service (provided by the Google Play services client library) that receives an
             intent from the CampaignTrackingReceiver upon install referral. -->
        <service
            android:name="com.google.android.gms.analytics.CampaignTrackingService"
            android:exported="false" />

        <!-- The receiver is called when Google Play has install referrer information and the app
             was installed from Google Play. On API >= 13 the receiver is called after first app
             launch rather than after install. -->
        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <!-- For more information on Google Analytics install referral measurement see
             https://goo.gl/RWn9xv -->
        <!-- END Google Analytics install referral measurement -->

        <!--
          BroadcastReceiver that will receive the C2DM messages from GCM
          services and handle them to the custom IntentService.

          The com.google.android.c2dm.permission.SEND permission is necessary
          so only GCM services can send data messages for the app.
        -->
        <receiver
            android:name="fr.paug.droidcon2015.gcm.GCMRedirectedBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="fr.paug.droidcon2015" />
            </intent-filter>
        </receiver>

        <!--
          Application-specific subclass of GCMBaseIntentService that will
          handle received messages.

          By default, it must be named .GCMIntentService, unless the
          application uses a custom BroadcastReceiver that redefines its name.
        -->
        <service android:name="fr.paug.droidcon2015.gcm.GCMIntentService" />

        <!-- Data, sync and schedule editing components -->

        <provider
            android:name="fr.paug.droidcon2015.provider.ScheduleProvider"
            android:authorities="fr.paug.droidcon2015"
            android:exported="true"
            android:label="@string/app_name"
            android:syncable="true"
            android:writePermission="fr.paug.droidcon2015.permission.WRITE_SCHEDULE" />

        <service
            android:name="fr.paug.droidcon2015.sync.SyncService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <!-- An IntentService responsible for bootstrapping the app with the necessary
            data such as session, speakers, etc. This data is used prior to the app's
            first sync to the backend server. -->
        <service
            android:name="fr.paug.droidcon2015.service.DataBootstrapService"
            android:exported="false" />

        <!--
             a simple receiver that triggers a sync for any message it receives. used by our
             GCM implementation
        -->
        <receiver android:name="fr.paug.droidcon2015.sync.TriggerSyncReceiver" />

        <!-- Other manifest items -->

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.BrowseSessionsActivity" />

        <!-- App widget components -->

        <receiver
            android:name="fr.paug.droidcon2015.appwidget.ScheduleWidgetProvider"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <!-- This specifies the widget provider info -->
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetinfo" />
        </receiver>

        <!-- The service serving the RemoteViews to the collection widget -->

        <service
            android:name="fr.paug.droidcon2015.appwidget.ScheduleWidgetRemoteViewsService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <!-- The service listening for incoming messages from the wear device -->
        <service
            android:name="fr.paug.droidcon2015.feedback.FeedbackWearableListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
    </application>

</manifest>
